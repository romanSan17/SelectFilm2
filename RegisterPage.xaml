<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SelectFilm.RegisterPage"
    Title="Регистрация">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Регистрация" FontSize="32" HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="Имя пользователя" />
        <Entry x:Name="passwordEntry" Placeholder="Пароль" IsPassword="True" />
        <Entry x:Name="confirmPasswordEntry" Placeholder="Подтвердите пароль" IsPassword="True" />

        <Label x:Name="errorLabel" TextColor="Red" IsVisible="False" />

        <Button Text="Зарегистрироваться" Clicked="OnRegisterClicked" />

        <Button Text="Уже есть аккаунт? Войти" Clicked="OnGoToLoginClicked" />

    </VerticalStackLayout>
</ContentPage>
